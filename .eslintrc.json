{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": ["off"]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "uphold",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ]
}
